<navbar class="navbar navbar-expand-lg navbar-light" style="background-color: #ffffff;">
    <div class="container">
        <a class="navbar-brand" href='/'>SE</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <% if(currentUser) { %>
                <li class="nav-item">
                    <% if(currentUser.status === 'citizen') { %>
                    <a class="nav-link" href="/citizen/dashboard">Dashboard</a>
                    <% } else { %>
                    <a class="nav-link" href="/police/dashboard">Dashboard</a>
                    <% } %>
                </li>
                <% } %>
            </ul>

            <ul class="nav navbar-nav ml-auto">
                <% if(!currentUser) { %>
                <li class="nav-item">
                    <a class="nav-link" href="/police/login">Police Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/police/register">Police Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/citizen/login">Citizen Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/citizen/register">Citizen Register</a>
                </li>
                <% } else { %>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        <%= currentUser.username || 'username' %>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <% if(currentUser.status === 'citizen') { %>
                        <a class="dropdown-item" href="/citizen/dashboard">Dashboard</a>
                        <% } else { %>
                        <a class="dropdown-item" href="/police/dashboard">Dashboard</a>
                        <% } %>
                        <a class="dropdown-item" href="/logout">Logout</a>
                    </div>
                </li>
                <% } %>
            </ul>
        </div>
    </div>
</navbar>